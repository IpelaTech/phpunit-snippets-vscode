{
    "TestCase": {
        "prefix": "pu:testCase",
        "body": [
            "use PHPUnit\\Framework\\TestCase;\n",
            "/**",
            " * ${1:ClassName}Test",
            " * @group ${2:group}",
            " */",
            "class ${1:ClassName}Test extends TestCase\n{",
            "    /** @test */",
            "    public function ${3:test_}${4:function}()",
            "    {",
            "        ${5:// Test}",    
            "    }\n",
            "}\n"
        ],
        "description": "Create TestCase Class"
    },
    "setUp": {
        "prefix": "pu:setUp",
        "body": ["public function setUp()\n{\n    ${1:// setup}\n}\n"],
        "description": "setUp()"
    },
    "tearDown": {
        "prefix": "pu:tearDown",
        "body": ["public function tearDown()\n{\n    ${1:// unset}\n}\n"],
        "description": "tearDown()"
    },
    "TestFunction": {
        "prefix": "pu:testFunction",
        "body": [
            "/** @test */",
            "public function ${1:test_}${2:function}()",
            "{",
            "    ${3:// Test}",
            "}\n"
        ],
        "description": "Create test function"
    },
    "TestDoxFunction": {
        "prefix": "pu:testDoxFunction",
        "body": [
            "/** ",
            " * @test",
            " * @testdox  ${3:description}",
            " */",
            "public function ${1:test_}${2:function}()",
            "{",
            "    ${4:// Test}",
            "}\n"
        ],
        "description": "Create test function with @testdox"
    },
    "TestException": {
        "prefix": "pu:testException",
        "body": [
            "/** ",
            " * @test",
            " * @expectedException  ${3:exception}",
            " */",
            "public function ${1:test_}${2:function}()",
            "{",
            "    ${4:// Test}",
            "}\n"
        ],
        "description": "Create test function with @expectedException"
    }
}